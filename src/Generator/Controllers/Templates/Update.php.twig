class Update{{ entityName }}Action implements MiddlewareInterface
{
    /**
     * @var EntityManagerInterface
     */
    private $entityManager;
    /**
     * @var HydratorInterface
     */
    private $hydrator;
    /**
     * @var InputFilterInterface
     */
    private $inputFilter;
    /**
     * @var LoggerInterface
     */
    private $logger;
    /**
     * @var ExtractionInterface
     */
    private $extraction;

    public function __construct(
        EntityManagerInterface $entityManager,
        HydratorInterface $hydrator,
        InputFilterInterface $inputFilter,
        LoggerInterface $logger,
        ExtractionInterface $extraction
    ) {
        $this->entityManager = $entityManager;
        $this->hydrator = $hydrator;
        $this->inputFilter = $inputFilter;
        $this->logger = $logger;
        $this->extraction = $extraction;
    }

    /**
     * @inheritdoc
     */
    public function process(ServerRequestInterface $request, DelegateInterface $handler): ResponseInterface
    {
        $data = $request->getParsedBody();
        $id = (int)$request->getAttribute('id');

        $this->inputFilter->setData($data);

        $message = null;
        $validation = [];
        $updated = false;
        $status = 200;

        if ($this->inputFilter->isValid()) {
            try {
                $entity = $this->getEntity($id, $data);
                $this->entityManager->persist($entity);
                $this->entityManager->flush();
                $message = new SuccessMessage('{{ entityName }} has been updated!');
                $updated = true;
            } catch (NonExistingEntity $exception) {
                $message = new DangerMessage($exception->getMessage());
                $status = 404;
            } catch (ORMInvalidArgumentException $exception) {
                $message = new DangerMessage($exception->getMessage());
                $status = 400;
{% if hasUnique %}
            } catch (UniqueConstraintViolationException $exception) {
                $message = new DangerMessage('{{ uniqueIdxMessage }}');
                $status = 400;
{% endif %}
            } catch (ORMException $exception) {
                $this->logger->error((string)$exception);
                $message = new DangerMessage('Error saving {{ entityName|lower }}.');
                $status = 400;
            }
        } else {
            foreach ($this->inputFilter->getInvalidInput() as $key => $input) {
                $messages = $input->getMessages();
                $validation[] = [
                    'field' => $key,
                    'msg' => reset($messages)
                ];
            }
            $status = 400;
        }

        return new JsonResponse([
            'msg' => $message,
            'success' => $updated,
            'data' => [
                'validation' => $validation,
                '{{ entityName|lower}}' => isset($entity) ? $this->extraction->extract($entity) : null,
            ]
        ], $status);
    }

    private function getEntity(int $id, array $data): {{ entityName }}
    {
        /** @var {{ entityName }} $entity */
        $entity = $this->entityManager->find({{ entityName }}::class, $id);
        if (!$entity) {
            throw new NonExistingEntity(sprintf('Could not find {{ entityName|lower }} by id %d.', $id));
        }
        if (isset($data['id'])) {
            unset($data['id']);
        }
        {{ dataRelationship|raw }}
        $this->hydrator->hydrate($data, $entity);

        return $entity;
    }
}
